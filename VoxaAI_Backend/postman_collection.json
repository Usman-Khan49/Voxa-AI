		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set(\"AUTH_TOKEN\", response.token);",
									"    pm.collectionVariables.set(\"USER_ID\", response.user.id);",
									"    console.log(\"Token saved to collection:\", response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Test123!\",\n  \"name\": \"Test User\"\n}"
						},
						"url": {
							"raw": "{{GATEWAY_URL}}/api/auth/register",
							"host": ["{{GATEWAY_URL}}"],
							"path": ["api", "auth", "register"]
						},
						"description": "Register a new user and automatically save the authentication token"
					},
					"response": []
				},
				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set(\"AUTH_TOKEN\", response.token);",
									"    pm.collectionVariables.set(\"USER_ID\", response.user.id);",
									"    console.log(\"Token saved to collection:\", response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Test123!\"\n}"
						},
						"url": {
							"raw": "{{GATEWAY_URL}}/api/auth/login",
							"host": ["{{GATEWAY_URL}}"],
							"path": ["api", "auth", "login"]
						},
						"description": "Login with existing credentials and automatically save the authentication token"
					},
					"response": []
				},
				{
					"name": "Verify Token",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{AUTH_TOKEN}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{GATEWAY_URL}}/api/auth/verify",
							"host": ["{{GATEWAY_URL}}"],
							"path": ["api", "auth", "verify"]
						},
						"description": "Verify that your authentication token is valid"
					},
					"response": []
				}
			]
		},
		{
			"name": "Audio Processing",
			"item": [
				{
					"name": "Process Audio (Full Workflow)",
					"request": {
						"method": "POST",
						"header": [
